{
  "name": "acquia/ads-cli-php",
  "description": "ADS CLI written in PHP.",
  "type": "library",
  "license": "GPL-2.0-only",
  "authors": [
    {
      "name": "Matthew Grasmick",
      "email": "matt.grasmick@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": "^7.3",
    "ext-json": "*",
    "doctrine/cache": "^1.10",
    "drupol/phposinfo": "^1.6",
    "kevinrob/guzzle-cache-middleware": "^3.3",
    "league/oauth2-client": "^2.4",
    "psr/log": "^1.1",
    "react/event-loop": "^1.1",
    "symfony/cache": "^5.0",
    "symfony/console": "^5.0",
    "symfony/filesystem": "^5.1@dev",
    "symfony/finder": "^5.0",
    "symfony/process": "^5.0",
    "symfony/validator": "^5.0",
    "symfony/yaml": "^5.1@dev",
    "typhonius/acquia-php-sdk-v2": "dev-master",
    "zumba/amplitude-php": "^1.0"
  },
  "require-dev": {
    "acquia/coding-standards": "^0.4.3",
    "pheromone/phpcs-security-audit": "^2.0.1",
    "brainmaestro/composer-git-hooks": "^2.8",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.6.2",
    "phpspec/prophecy": "^1.10",
    "phpunit/phpunit": "^9.1",
    "php-coveralls/php-coveralls": "^2.2",
    "squizlabs/php_codesniffer": "^3.5",
    "webmozart/path-util": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "Acquia\\Ads\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Acquia\\Ads\\Tests\\": "tests/phpunit/src/"
    }
  },
  "bin": [
    "bin/acli"
  ],
  "config": {
    "process-timeout": 3600,
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.x-dev"
    },
    "hooks": {
      "pre-commit": "vendor/bin/phpcs",
      "pre-push": "vendor/bin/phpcs",
      "post-install-cmd": "cghooks add --ignore-lock",
      "post-update-cmd": "cghooks update"
    },
    "phpcodesniffer-search-depth": 4
  },
  "prefer-stable": true,
  "scripts": {
    "update-cloud-api-spec": [
      "cd build",
      "git clone git@github.com:acquia/cx-api-spec.git",
      "cd cx-api-spec",
      "npm i -g npm@6.6",
      "nvm install",
      "nvm use",
      "npm install",
      "make install",
      "make spec",
      "cp dist/spec/acquia-spec.yaml ../assets/",
      "cd ..",
      "rm -rf cx-api-spec"
    ],
    "cs": "phpcs",
    "cbf": "phpcbf",
    "unit": "phpunit tests/phpunit -vvv",
    "lint": [
      "find src -name '*.php' -print0 | xargs -0 -n1 php -l",
      "find tests -name '*.php' -print0 | xargs -0 -n1 php -l"
    ],
    "test": [
      "@lint",
      "@cs",
      "@unit"
    ]
  }
}
